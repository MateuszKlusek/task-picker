{
  "name": "task-picker",
  "version": "0.1.0",
  "description": "Interactive task picker tool with fzf integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "task-picker": "./dist/index.js"
  },
  "scripts": {
    "prebuild": "npx tsx scripts/embed-template.ts",
    "build": "tsdown",
    "postbuild": "chmod +x dist/index.js",
    "dev": "npx tsx src/index.ts --log-level=debug",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "task",
    "fzf",
    "cli",
    "productivity",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "crypto": "^1.0.1",
    "fast-glob": "^3.3.3",
    "js-yaml": "^4.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "tsdown": "0.15.6",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}